        <Label x:Name="Order_Total_Copy" Content="£ " VerticalAlignment="Top" Margin="250,483,177,0" Height="76" FontStyle="Italic" FontWeight="Bold" FontFamily="Segoe Script" FontSize="36" Foreground="Black" Background="#00000000"/>
        <Label x:Name="lbl_Qty" Content="" HorizontalAlignment="Left" Height="281" Margin="280,197,0,0" VerticalAlignment="Top" Width="63" FontSize="18"/>
