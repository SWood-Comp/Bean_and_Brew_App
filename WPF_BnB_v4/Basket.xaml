        <Label x:Name="lbl_Coffees_Copy3" Content="Price:" HorizontalAlignment="Left" Height="38" Margin="186,154,0,0" VerticalAlignment="Top" Width="76" FontSize="18" FontFamily="Segoe Print" FontWeight="Bold"/>
        <Button x:Name="btn_CompleteOrder" Content="Order Now" HorizontalAlignment="Left" Height="49" Margin="36,491,0,0" VerticalAlignment="Top" Width="189" Background="#FFFF9D3B" FontSize="20" FontWeight="Bold" FontFamily="Segoe Print" Click="btn_CompleteOrder_Click"/>

